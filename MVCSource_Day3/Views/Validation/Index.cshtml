@model SampleMvcApp.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("AddStudent", "Validation", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

    <div style="margin-left:20px">
        <h1>Student Registration Form</h1> <hr />
        <div class="form-group row">
            <label for="sName" class="col-sm-2 col-form-label">Student Name: </label>
            <div class="col-sm-10">
                @Html.EditorFor((m) => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor((m)=>m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email Address</label>
            <div class="col-sm-10">
                @Html.EditorFor((m) => m.EmailAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor((m) => m.EmailAddress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label for="age" class="col-sm-2 col-form-label">Student Age</label>
            <div class="col-sm-10">
                @Html.EditorFor((m) => m.Age, new { @class = "form-control" })
                @Html.ValidationMessageFor((m) => m.Age, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>
    </div>
    }
</body>
</html>
